@model IEnumerable<WebContratos.Models.Listacontrato>

@{
    ViewData["Title"] = "Lista de Contratos";
}
<script>
    function formatContratoID(id) {
        return id.toString().padStart(10, '0') 
        
    }
    
</script>
<h1>Lista de Contratos</h1>

<p>
    <a asp-action="Create" class="btn-secondary">Criar Novo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-secondary">
            
            <th>
               Número do Contrato
            </th>
            <th>
               Nome do Mutuário
            </th>
            <th>
               Data da Assinatura
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StrContratoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeMutuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAssinatura)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContratoID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ContratoID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ContratoID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
